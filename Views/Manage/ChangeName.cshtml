@model sanyug_bugtracker.Models.ChangeNameViewModel
@{
    ViewBag.Title = "Change Name";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Name Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("First Name", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="text" name="NewFirstName" value="NewFirstName" required class="form-control" />
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Last Name", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="text" name="NewLastName" value="NewLastName" required class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Name" class="btn btn-default" />
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}