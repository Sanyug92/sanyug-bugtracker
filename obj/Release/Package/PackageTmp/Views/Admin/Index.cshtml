@model IEnumerable<sanyug_bugtracker.Models.AdminUserViewModel>



@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
        <br />
        <a href="@Url.Action("Index", "Projects")"> 
    Projects</a>
    }
</p>
<table class="table">


    <tr>
        <th>
            Frist Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Role
        </th>
    </tr>
    @if (Model != null)
    {
        foreach (var user in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modeluser => user.user.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modeluser => user.user.LastName)
                </td>
                <td>
                    @foreach (var item in user.roles)
                    {
                        @item <br />
                    }
                    @*@Html.LabelFor(modeluser => user.user.Id, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.HiddenFor(User => user.user.Id)*@
                </td>

                <td>
                    @Html.ActionLink("Change Role", "ChangeRole", new { id = user.user.Id })
                </td>
            </tr>
        }
    }


</table>
